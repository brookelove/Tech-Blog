<h1>Welcome back {{username}}</h1>
<h2>All your blogs:</h2>
<form action="" id="newBlog">
    <input type="text" id="title" placeholder="title">
    <textarea id="body" cols="30" rows="10"></textarea>
    <button>Submit</button>
</form>

{{#each Blogs}}
<div id={{id}} class="post">
    <h3>{{title}}</h3>
    <p>{{body}}</p>
    <hr>
    <button id="deleteBTN" value={{id}}>delete</button>
    <button id="updateBTN" value={{id}}>update</button>
</div>
{{/each}}
<script src="/js/profile.js"></script>